page {
  background-color: #F4F4F4;
}
.user-info {
  display: flex;
  width: 100%;
  height: 150rpx;
}
.user-photo {
  margin: 20rpx 10rpx 10rpx 20rpx;
  align-self: center;
}
.user-photo image {
  width: 120rpx;
  height: 120rpx;
}
.process image {
  width: 60rpx;
  height: 60rpx;
}
.user-tag {
  display: flex;
  width: 330rpx;
  flex-direction: column;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  z-index: 9999;
}
.user-name {
  display: flex;
  margin: auto;
  margin-left: 0;
  margin-top: 40;
}
.user-name text {
  color: #222222;
  font-size: 34rpx;
  font-weight: 800;
}
.user-flag {
  margin: auto;
  margin-left: 0;
  margin-top: 0;
  display: flex;
}
.identity {
  background-color: #C27C88;
  color: gainsboro;
  padding: 5rpx 10rpx;
  font-size: 20rpx;
  border-radius: 8rpx;
}
.level {
  background-color: #3F797A;
  color: white;
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
  margin-left: 10rpx;
  font-size: 20rpx;
}
.grow-up {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  margin-left: 0rpx;
}
.sign {
  display: inline;
}
.process {
  display: flex;
  align-self: center;
}
.grades {
  text-align: center;
  position: relative;
  margin: auto;
  margin-top: 0;
  top: -8rpx;
  font-size: 20rpx;
}
.exp {
  color: #222222;
  letter-spacing: 1rpx;
}
.user-detail {
  display: flex;
  flex-wrap: wrap;
  margin: auto;
  margin-top: 10rpx;
  padding-top: 10rpx;
  align-items: center;
  justify-content: space-around;
  border-top: 1px solid #d6cbcb;
}
.type-name {
  color: #222222;
  text-align: center;
  font-size: 23rpx;
}
.type-num {
  color: #222222;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  position: relative;
  top: -5rpx;
}
.top {
  padding-top: 20rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
}
/* 中间 */
.desc-img1 image {
  width: 70rpx;
  height: 70rpx;
}
.desc-img2 image {
  width: 100rpx;
  height: 100rpx;
}
.middle {
  display: flex;
  margin-top: 30rpx;
  height: 160rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
}
.middle-content {
  height: 120;
  width: 100%;
  padding-left: 20rpx;
  margin: auto;
  align-items: center;
  justify-content: space-around;
  display: flex;
}
.message {
  align-items: center;
  display: flex;
}
.division {
  display: flex;
  align-items: center;
}
.vertical-line image {
  width: 50rpx;
  height: 80rpx;
  z-index: 9999;
  vertical-align: middle;
}
.about {
  align-items: center;
  display: flex;
}
.about image {
  width: 80rpx;
  height: 80rpx;
}
.title1 {
  font-size: 30rpx;
  font-weight: 800;
  color: #222222;
}
.detail1 {
  font-size: 20rpx;
  font-weight: 500;
  color: #222222;
}
.title2 {
  font-size: 30rpx;
  font-weight: 800;
  color: #222222;
}
.detail2 {
  font-size: 20rpx;
  font-weight: 500;
  color: #222222;
}
/* 下面 */
.bottom {
  margin-top: 35rpx;
  background-color: #FFFFFF;
}
.bottom-content {
  width: 95%;
  border-radius: 5%;
  margin: auto;
  padding-bottom: 35rpx;
  background-color: #FFFFFF;
}
.me-about {
  display: flex;
  margin: 20rpx 40rpx;
  padding: 30rpx 0rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid white;
  color: #222222;
}
.me-about image {
  align-self: center;
  width: 35rpx;
  height: 35rpx;
}

